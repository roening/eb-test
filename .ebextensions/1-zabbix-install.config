commands:
# Create user
  "1_remove_user":
    command: userdel zabbix
    test: id -u zabbix
  "2_remote_group":
    command: groupdel zabbix
    test: id -g zabbix
  "3_create_user":
    command: useradd -g zabbix zabbix

