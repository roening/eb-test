# Download package
  "9_download_zabbix-agent":
    command: wget http://www.zabbix.com/downloads/3.0.4/zabbix_agents_3.0.4.linux2_6_23.amd64.tar.gz -O /tmp/zabbix/zabbix_agents_3.0.4.linux2_6_23.amd64.tar.gz
  "10_extract":
    command: tar -xzf /tmp/zabbix/zabbix_agents_3.0.4.linux2_6_23.amd64.tar.gz -C /tmp/zabbix

# Install package
  "11_copy_bin"
    command: cp -Rf /tmp/zabbix/bin/* /usr/bin && cp -Rf /tmp/zabbix/sbin/* /usr/sbin
  "12_remove_download":
    command: rm -Rf /tmp/zabbix
    test: cd /tmp/zabbix